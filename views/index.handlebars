{{!-- /views/index.handlebars --}}
<div for="" class="h1 mx-auto mb-3 mt-5" style="width: 300px;">你想對誰說幹話</div>
<form action="/" method="POST">
    <div class="d-flex flex-row justify-content-around mb-3">
        <label class=" custom-radio card mx-2" style="width: 18rem;" for="engineer">
            <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
                class="card-img-top img-fluid" alt="">
            <div class="d-flex justify-content-center card-body">
                <input type="radio" id="engineer" name="target" value="engineer" class="custom-control-input"
                    {{#if options.engineer}}checked{{/if}}>
                <label class="custom-control-label" for="engineer">工程師</label>
            </div>
        </label>
        <label class=" custom-radio card mx-2" style="width: 18rem;" for="designer">
            <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
                class="card-img-top img-fluid" alt="">
            <div class="d-flex justify-content-center card-body">
                <input type="radio" id="designer" name="target" value="designer" class="custom-control-input"
                    {{#if options.designer}}checked{{/if}}>
                <label class="custom-control-label" for="designer">設計師</label>
            </div>
        </label>
        <label class=" custom-radio card mx-2" style="width: 18rem;">
            <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
                class="card-img-top img-fluid" alt="">
            <div class="d-flex  justify-content-center card-body" for="entrepreneur">
                <input type="radio" id="entrepreneur" name="target" value="entrepreneur" class="custom-control-input"
                    {{#if options.entrepreneur}}checked{{/if}}>
                <label class="custom-control-label" for="entrepreneur">創業家</label>
            </div>

        </label>
    </div>
    <div class="d-flex flex-row justify-content-left pl-5">
        <button type="submit" class="btn btn-primary mr-2 p-3">產生幹話</button>
        {{#if options.statement}}
        <div class="p-3  bg-secondary text-white">{{ options.statement }}</div>
        {{/if }}
    </div>
</form>